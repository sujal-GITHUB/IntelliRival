<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="container">
    <header class="my-4 text-center">
      <h1>Analysis</h1>
      <p class="lead">Analyze <%= target %>'s relationships with <%= company %>'s competitors</p>
    </header>

    <!-- Analysis Control Panel -->
    <div class="row mb-4">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-2">Intelligent Competitor Analysis</h5>
                <p class="text-muted small mb-0">Analyze relationships and partnerships</p>
              </div>
              <button id="startAnalysis" class="btn btn-primary" style="background-color: rgb(226, 155, 0); border-radius: 100%; border-color: white; display: flex; justify-content: center; align-items: center;">
                <i class="bi bi-play-fill"></i>â–¶
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Progress Panel -->
    <div id="loadingSection" class="row mb-4 d-none">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <div class="text-center">
              <div class="spinner-border spinner-custom mb-3" 
                   style="width: 3rem; height: 3rem;" 
                   role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <h6 class="mb-3">Analyzing Competitor Relationships</h6>
              <div class="progress" style="height: 10px;">
                <div id="progressBar" 
                     class="progress-bar progress-bar-striped progress-bar-animated" 
                     role="progressbar" 
                     style="width: 0%; background-color: rgb(226, 155, 0);">
                </div>
              </div>
              <p class="text-muted small mt-2" id="analysisStatus">Initializing analysis...</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="resultsContainer" class="d-none">
      <h2 class="text-center mb-4">Analysis Results</h2>
      
      <!-- Charts Dashboard -->
      <div class="row mb-5">
        <!-- Competitor Strength Chart -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header text-white" style="background-color: rgb(226, 155, 0);">
              <h5 class="mb-0">Top Competitors by Strength</h5>
            </div>
            <div class="card-body chart-container">
              <canvas id="competitorStrengthChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Technologies Distribution Chart -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header text-white" style="background-color: rgb(226, 155, 0);">
              <h5 class="mb-0">Technology Distribution</h5>
            </div>
            <div class="card-body chart-container">
              <canvas id="technologiesChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Timeline Chart -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header text-white" style="background-color: rgb(226, 155, 0);">
              <h5 class="mb-0">Activity Timeline</h5>
            </div>
            <div class="card-body chart-container">
              <canvas id="timelineChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Relationship Types Chart -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header " style="background-color: rgb(226, 155, 0);">
              <h5 class="mb-0" style="color: rgb(255, 255, 255);">Relationship Types</h5>
            </div>
            <div class="card-body chart-container">
              <canvas id="relationshipChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      
      <div id="competitorResults"></div>
    </div>
  </div>

  <!-- Result Item Template -->
  <template id="resultItemTemplate">
    <div class="card mb-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="competitor-name mb-0"></h5>
        <span class="badge confidence-badge"></span>
      </div>
      <div class="card-body">
        <h6 class="finding-title"></h6>
        <p class="finding-snippet"></p>
        <div class="relationship-details">
          <p><strong>Type of Relationship:</strong> <span class="relationship-type"></span></p>
          <p><strong>Timeframe:</strong> <span class="relationship-year"></span></p>
        </div>
        <a href="#" class="source-link btn btn-sm btn-outline-primary" target="_blank">View Source</a>
      </div>
    </div>
  </template>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>